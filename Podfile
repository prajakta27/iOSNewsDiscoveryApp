	# For example, to use Firebase Authentication and Cloud Firestore
	pod 'FirebaseAuth'
	pod 'FirebaseFirestore'
	pod 'Firebase/Crashlytics'
  
# Pods for iOSNewsApp

  target 'iOSNewsAppTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'iOSNewsAppUITests' do
    # Pods for testing
  end

